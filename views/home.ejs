<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <script src="https://cdn.tailwindcss.com"></script>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

        <style>
            body {
                font-family: 'Inter', sans-serif;
                color: #0d0c22;
            }

            .search-shadow {
                box-shadow: 0 0 0 4px rgba(234, 76, 137, 0.1);
            }

            .card-hover:hover .card-overlay {
                opacity: 1;
            }

            .card-overlay {
                background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 60%, rgba(0, 0, 0, 0.6) 100%);
                transition: opacity 0.3s ease;
            }
        </style>
        <title>Home - Modern Blog</title>
</head>

<body class="bg-white">
    <nav class="flex items-center justify-between px-6 py-4 border-b border-gray-100 sticky top-0 bg-white z-50">
        <div class="flex items-center space-x-8">
            <a href="/" class="flex-shrink-0">
                <svg width="160" height="30" viewBox="0 0 160 26" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path
                        d="M11.4 1.2C5.1 1.2 0 6.3 0 12.6s5.1 11.4 11.4 11.4 11.4-5.1 11.4-11.4S17.7 1.2 11.4 1.2zm0 19.8c-4.6 0-8.4-3.8-8.4-8.4s3.8-8.4 8.4-8.4 8.4 3.8 8.4 8.4-3.8 8.4-8.4 8.4z"
                        fill="#ea4c89" />
                    <text x="28" y="20" font-family="Inter" font-weight="bold" font-size="20"
                        fill="#0d0c22">Bloggify</text>
                </svg>
            </a>
        </div>

        <div class="flex items-center space-x-6">
            <div class="hidden lg:flex items-center space-x-6 text-sm font-medium text-gray-600">
                <a href="/" class="hover:text-black">Home</a>
                <% if (locals.user) { %>
                    <a href="/blog/add-new" class="hover:text-black">Add Blog</a>
                    <% } %>
            </div>

            <div class="flex items-center space-x-4">
                <% if (locals.user) { %>
                    <div class="flex items-center space-x-3">
                        <img src="<%= user.profileimg %>"
                            class="w-8 h-8 rounded-full border border-gray-200 object-cover" alt="Profile">
                        <span class="text-sm font-semibold text-gray-700 hidden sm:block">
                            <%= user.name %>
                        </span>
                        <a href="/user/logout"
                            class="bg-[#0d0c22] text-white px-5 py-2.5 rounded-full text-sm font-medium hover:bg-gray-800 transition-colors">Logout</a>
                    </div>
                    <% } else { %>
                        <a href="/user/signin" class="text-sm font-medium text-gray-600 hover:text-black">Sign in</a>
                        <a href="/user/signup"
                            class="bg-[#ea4c89] text-white px-5 py-2.5 rounded-full text-sm font-medium hover:bg-[#f082ac] transition-colors">
                            Sign up
                        </a>
                        <% } %>
            </div>
        </div>
    </nav>
    <header class="max-w-4xl mx-auto text-center py-16 px-6">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Discovery</h1>
        <p class="text-lg text-gray-500 leading-relaxed">
            Explore <%= blogs.length %> amazing stories and insights from our community.<br>

                <% if (locals.user) { %>
                    Want to share yours?
                    <a href="/blog/add-new"
                        class="text-gray-900 underline decoration-gray-300 hover:decoration-gray-900">Start
                        writing</a>...
                    <% } else { %>
                        Want to share yours?
                        <a href="/user/signin"
                            class="text-gray-900 underline decoration-gray-300 hover:decoration-gray-900">Sign in to
                            start writing</a>...
                        <% } %>
        </p>
    </header>

    <main class="max-w-[1550px] mx-auto px-6 pb-20">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">

            <% blogs.forEach((blog)=> { %>
                <div
                    class="group flex flex-col bg-white rounded-2xl overflow-hidden border border-gray-100 shadow-sm hover:shadow-md transition-all duration-300">

                    <a href="/blog/<%= blog._id %>" class="block overflow-hidden relative aspect-[16/10]">
                        <img src="<%= blog.coverImgURL %>" alt="<%= blog.title %>"
                            class="w-full h-full object-cover transition-transform duration-500 ease-in-out group-hover:scale-105">

                        <div
                            class="absolute inset-0 bg-black/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                            <div class="bg-white/90 p-3 rounded-full shadow-lg">
                                <svg class="w-6 h-6 text-[#ea4c89]" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z">
                                    </path>
                                </svg>
                            </div>
                        </div>
                    </a>

                    <div class="p-5 flex flex-col flex-1">
                        <a href="/blog/<%= blog._id %>" class="block mb-4">
                            <h3
                                class="text-xl font-bold text-gray-900 leading-tight group-hover:text-[#ea4c89] transition-colors line-clamp-2">
                                <%= blog.title %>
                            </h3>
                        </a>

                        <div class="mt-auto pt-4 border-t border-gray-50 flex items-center justify-between">
                            <div class="flex items-center space-x-3">
                                <% if (blog.createdBy && blog.createdBy.profileImageURL) { %>
                                    <img src="<%= blog.createdBy.profileImageURL %>"
                                        class="w-8 h-8 rounded-full object-cover border border-gray-100">
                                    <% } else { %>
                                        <div
                                            class="w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center text-[10px] font-bold text-gray-400">
                                            <%= (blog.createdBy && blog.createdBy.fullName) ?
                                                blog.createdBy.fullName.charAt(0).toUpperCase() : 'U' %>
                                        </div>
                                        <% } %>
                                            <span class="text-sm font-semibold text-gray-700">
                                                <%= (blog.createdBy && blog.createdBy.fullName) ?
                                                    blog.createdBy.fullName : 'Anonymous' %>
                                            </span>
                            </div>

                            <a href="/blog/<%= blog._id %>"
                                class="text-xs font-bold text-gray-900 bg-[#f3f3f4] px-4 py-2 rounded-lg hover:bg-[#ea4c89] hover:text-white transition-all duration-300">
                                View More
                            </a>
                        </div>
                    </div>
                </div>
                <% }) %>

        </div>
    </main>

    <%- include('./partials/scripts') %>
</body>

</html>