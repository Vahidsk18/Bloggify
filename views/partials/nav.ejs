<nav class="flex items-center justify-between px-6 py-4 border-b border-gray-100 sticky top-0 bg-white z-50">
  <div class="flex items-center space-x-8">
    <a href="/" class="flex-shrink-0 flex items-center">
      <svg width="30" height="30" viewBox="0 0 76 26" fill="none">
        <path
          d="M11.4 1.2C5.1 1.2 0 6.3 0 12.6s5.1 11.4 11.4 11.4 11.4-5.1 11.4-11.4S17.7 1.2 11.4 1.2zm0 19.8c-4.6 0-8.4-3.8-8.4-8.4s3.8-8.4 8.4-8.4 8.4 3.8 8.4 8.4-3.8 8.4-8.4 8.4z"
          fill="#ea4c89" />
      </svg>
      <span class="ml-2 font-bold text-xl tracking-tight text-[#0d0c22]">Bloggify</span>
    </a>
  </div>

  <div class="flex items-center space-x-6">
    <div class="hidden sm:flex items-center space-x-6 text-sm font-medium text-gray-600">
      <a href="/" class="hover:text-black">Home</a>
      <% if (locals.user) { %>
        <a href="/blog/add-new" class="hover:text-black text-[#ea4c89]">Add Blog</a>
        <% } %>
    </div>

    <div class="flex items-center space-x-4">
      <% if (locals.user) { %>
        <div class="flex items-center space-x-3">
          <img src="<%= user.profileimg %>" class="w-8 h-8 rounded-full border border-gray-100 object-cover"
            alt="User">
          <span class="text-sm font-semibold text-gray-700 hidden lg:block">
            <%= user.fullName %>
          </span>
          <a href="/user/logout"
            class="bg-[#0d0c22] text-white px-5 py-2 rounded-full text-xs font-bold hover:bg-gray-800 transition-colors">Logout</a>
        </div>
        <% } else { %>
          <a href="/user/signin" class="text-sm font-medium text-gray-600 hover:text-black">Sign in</a>
          <a href="/user/signup"
            class="bg-[#ea4c89] text-white px-5 py-2.5 rounded-full text-sm font-medium hover:bg-[#f082ac] transition-colors shadow-sm">Create
            account</a>
          <% } %>
    </div>
  </div>
</nav>

<% if (locals.error) { %>
  <div class="max-w-4xl mx-auto mt-6 px-6">
    <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded shadow-sm">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
              clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-red-700 font-medium">
            <%= locals.error %>
          </p>
        </div>
      </div>
    </div>
  </div>
  <% } %>